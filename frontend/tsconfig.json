{
	"compilerOptions": {
		"paths": {
			"@/*": ["./src/*"],
			"components/*": ["./components/*"]
		},
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		".next/types/**/*.ts",
		"**/*.ts",
		"**/*.tsx",
		"src/app/[lang]/bookmarks/page.jsx",
		"src/app/[lang]/[userId]/page.jsx"
, "src/components/atom/Toast.tsx"	],
	"exclude": ["node_modules"]
}
